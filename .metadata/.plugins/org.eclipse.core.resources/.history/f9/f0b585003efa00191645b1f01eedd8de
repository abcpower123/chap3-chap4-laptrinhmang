package ex1;

import java.io.InputStream;
import java.io.OutputStream;
import java.net.Socket;
import java.util.Scanner;

public class Client {

	public static void main(String args[]){
		Scanner sc=new Scanner(System.in);
		try {
			Socket s = new Socket("localhost",123);		// Kết nối đến Server
			
			InputStream is = s.getInputStream();	// Lấy InputStream 
			OutputStream os = s.getOutputStream(); 	// Lấy OutputStream 
			
			String input=sc.nextLine();
			
			os.write(input.getBytes());
			System.out.println("Send success!");
			
			System.out.println("Output from server:");
			Scanner scannerRead=new Scanner(is);
			while(scannerRead.hasNext())
				System.out.println(scannerRead.nextLine());
			
			s.close();
		} catch(Exception ie){
			
			ie.printStackTrace();
		}	
	}	


}
